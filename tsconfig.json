{
  "extends": ["@tsconfig/node24/tsconfig.json", "@tsconfig/node-ts/tsconfig.json"],
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@prisma/generated": ["generated/prisma/client"]
    }
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["dist", "node_modules", "generated", "tools"]
}
